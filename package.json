{
  "name": "fastify.base.template",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "author": "Retailloop Solution Limited",
  "scripts": {
    "start:dev": "nodemon",
    "start": "npm run build && node dist/server.js",
    "build": "tsc",
    "postbuild": "copyfiles -u 1 \"src/**/*.proto\" dist",
    "prepare": "husky install",
    "test:with-db": "NODE_ENV=test npm run db:migrate && jest --runInBand --passWithNoTests",
    "test": "jest --runInBand --passWithNoTests --detectOpenHandles --forceExit",
    "knex": "ts-node -r dotenv/config ./node_modules/knex/bin/cli.js",
    "db:migrate:make": "npm run knex -- migrate:make",
    "db:migrate": "npm run knex --migrate:latest",
    "db:migrate:rollback": "npm run knex -- migrate:rollback",
    "db:seed:make": "npm run knex -- seed:make",
    "db:seed": "npm run knex -- seed:run",
    "lint": "eslint --ignore-path .eslintignore --ext .ts .",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^28.6.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.4.0",
    "fastify-tsconfig": "^2.0.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "@0dep/pino-applicationinsights": "^1.0.0",
    "@azure/service-bus": "^7.9.5",
    "@fastify/cors": "^9.0.1",
    "applicationinsights": "^2.9.5",
    "axios": "^1.7.2",
    "bcrypt": "^5.1.1",
    "bullmq": "^5.8.7",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "event-dispatch": "^0.4.1",
    "fastify": "^4.28.1",
    "fastify-plugin": "^4.5.1",
    "http-status": "^1.7.4",
    "ioredis": "^5.4.1",
    "jest-mock-extended": "^3.0.7",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "module-alias": "^2.2.3",
    "ms": "^2.1.3",
    "node-cron": "^3.0.3",
    "objection": "^3.1.4",
    "pg": "^8.12.0",
    "pino": "^9.2.0",
    "randomatic": "^3.1.1",
    "redlock": "^5.0.0-beta.2",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.8.0",
    "url": "^0.11.3",
    "uuid": "^10.0.0",
    "validatorjs": "^3.22.1"
  },
  "_moduleAliases": {
    "@config": "dist/config",
    "@shared": "dist/shared",
    "@utils": "dist/shared/utils"
  },
  "lint-staged": {
    "**/*.{js, ts}": [
      "npm run lint -- --fix",
      "npx prettier --write ./src"
    ]
  }
}
